if rest ? rest : rest = []

//begin rest
+b.SECTION.rest(class= rest.classMod ? rest.classMod : '')
	+b.sect-title
		+e.container.container
			+b.H2.title-md= rest.title
	+e.container.container
		+e.row
			mixin restItem(item)
				+e.item
					+e.item-pic(class='_' + item.picMod)
					+e.P.item-descr= item.itemDescr
						+e.STRONG= item.itemDescrBold
			each item in restRow
				+restItem(item)

	+b.look
		+e.container.container
			+e.in
				mixin lookItem(item)
					+e.A(href='#!' class='item _' +item.colMod)
						+e.DIV.item-pic
							+e.item-img(style="background-image: url(img/content/look_#{item.pic}.jpg)")
						+e.DIV.item-text
							+e.item-title= item.title
							+e.item-descr= item.descr
				each item in lookList
					+lookItem(item)
//end rest